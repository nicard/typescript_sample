{
  "compilerOptions": {
    "target": "es6",
    "outDir": "app/js",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "app/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}